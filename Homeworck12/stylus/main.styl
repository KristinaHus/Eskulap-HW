    width 71px
    height 67px
    margin 25% auto
  .ux-ui:before
    background url("../img/ux-ui.svg") no-repeat
    width 63px
    height 63px
    margin 26% auto
  .ux-ui:before
    background url("../img/ux-ui.svg") no-repeat
    width 63px
    height 63px
    margin 25% auto
  .animations:before
