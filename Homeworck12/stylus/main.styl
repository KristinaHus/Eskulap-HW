.latest-works
  text-align center
  .container
    padding 7% 0
    .works-list
      margin 9% 0 0 0
      li
        padding 1% 10px
    .thumbnail
      background #f4f4f4
      border 1px solid #f4f4f4
      border-radius(10px)
      height 20em
      overflow hidden
      img
        padding 40px 0 0 0

