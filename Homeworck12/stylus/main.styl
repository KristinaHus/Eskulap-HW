@import url("https://fonts.googleapis.com/css?family=Lato:400,300,700,900");

@require reset
@require default-classes
@require header
@require mixins
@require variables

.welcome
  background url("../img/background.jpg")
  background-size cover
  position relative
  overflow hidden
  &:before
    content ""
    width 93%
    height 100%
    background: -moz-linear-gradient(left, rgba(255,255,255,0) 0%, rgba(255,255,255,0) 6%, rgba(255,255,255,1) 7%, rgba(255,255,255,0.85) 33%, rgba(255,255,255,0.65) 34%, rgba(255,255,255,0.65) 63%, rgba(255,255,255,0.39) 64%, rgba(255,255,255,0.4) 92%, rgba(255,255,255,0) 93%);
    background: -webkit-linear-gradient(left, rgba(255,255,255,0) 0%,rgba(255,255,255,0) 6%,rgba(255,255,255,1) 7%,rgba(255,255,255,0.85) 33%,rgba(255,255,255,0.65) 34%,rgba(255,255,255,0.65) 63%,rgba(255,255,255,0.39) 64%,rgba(255,255,255,0.4) 92%,rgba(255,255,255,0) 93%);
    background: linear-gradient(to right, rgba(255,255,255,0) 0%,rgba(255,255,255,0) 6%,rgba(255,255,255,1) 7%,rgba(255,255,255,0.85) 33%,rgba(255,255,255,0.65) 34%,rgba(255,255,255,0.65) 63%,rgba(255,255,255,0.39) 64%,rgba(255,255,255,0.4) 92%,rgba(255,255,255,0) 93%);
    opacity 0.1
    position absolute
    top 0
    left -18%
    transform skew(42deg)
    z-index 1
  .content
    flex-col()
    padding 16% 0 0 0
    text-align center
    position relative
    z-index 999
  .img
    background white
    border-radius 50%
    width 147px
    height 147px
    align-self center
    box-shadow(0 0 0 10px rgba(255, 255, 255, 0.2), 0 0 0 20px rgba(255, 255, 255, 0.1))
    img
      width 100%
      border-radius(50%)
  .jumbotron
    flex-col()
    color white
    text-transform uppercase
    background transparent
    h1
      padding 30px 0 0 0
      font-size 50px
      font-weight 900
    p
      padding 20px
      font-size 16px
      font-weight 300
  .arrow
    padding 20px
    &:before
      content ""
      background url("../img/arrow.svg") no-repeat center
      height 32px
      width 19px
      margin auto
      display block